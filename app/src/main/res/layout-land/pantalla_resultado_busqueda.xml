<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3fdff"
    android:fadeScrollbars="true"
    tools:context="com.example.alexander.tesis.PantallaResultadoBusqueda"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/foto_simulada"
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/nombre_texto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:color/background_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombre_comun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombre_cientifico_titulo"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre Cientifico:"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/nombre_cientifico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/division_titulo"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Division:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/division"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:textStyle="italic"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/detalles_de_arbol"
                app:layout_constraintEnd_toStartOf="@+id/origen_texto"
                app:layout_constraintHorizontal_bias="0.359"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/familia_titulo"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Familia:"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/familia"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:textStyle="italic"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/detalles_de_arbol"
                app:layout_constraintEnd_toStartOf="@+id/origen_texto"
                app:layout_constraintHorizontal_bias="0.359"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/in_situ_titulo"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="In Situ:"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/zona_ubicada"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:textStyle="italic"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/detalles_de_arbol"
                app:layout_constraintEnd_toStartOf="@+id/origen_texto"
                app:layout_constraintHorizontal_bias="0.359"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/origen_titulo"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Origen:"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="italic"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/detalles_de_arbol"
                app:layout_constraintEnd_toStartOf="@+id/origen_texto"
                app:layout_constraintHorizontal_bias="0.359"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/origen_arbol"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/usos_titulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Usos"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/origen_texto" />

            <TextView
                android:id="@+id/usos_del_arbol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="@integer/google_play_services_version"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="@dimen/activity_vertical_margin"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/detalles_titulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Detalles"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/origen_texto" />

            <TextView
                android:id="@+id/detalles_de_arbol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="@dimen/activity_vertical_margin"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/mapa_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mapa"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/map"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_weight="3"
                android:background="@drawable/boton_redondo"
                android:backgroundTint="#b5ecf6"
                android:foregroundGravity="center_vertical|center_horizontal"
                app:srcCompat="@android:drawable/ic_menu_mapmode" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
